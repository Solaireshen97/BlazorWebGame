{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information",
      "BlazorWebGame.Server.Services.UnifiedDataStorageService": "Debug",
      "BlazorWebGame.Server.Data.EnhancedGameDbContext": "Information"
    }
  },
  "AllowedHosts": "*",
  
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=gamedata_enhanced.db;Cache=Shared;Pooling=true"
  },
  
  "EnhancedDataStorage": {
    "ImplementationType": "Unified",
    "ConnectionString": "Data Source=gamedata_enhanced.db;Cache=Shared;Pooling=true",
    "EnableAutoMigration": true,
    "EnableDatabaseOptimization": true,
    
    "Cache": {
      "Enabled": true,
      "SizeLimit": 10000,
      "CompactionPercentage": 0.25,
      "DefaultExpirationMinutes": 30,
      "HighPriorityExpirationMinutes": 120,
      "SlidingExpirationMinutes": 10
    },
    
    "BatchOperations": {
      "EnableBatchWrites": true,
      "BatchWriteIntervalSeconds": 5,
      "BatchWriteMaxItems": 100,
      "BatchWriteTimeoutSeconds": 30
    },
    
    "Maintenance": {
      "EnableAutoMaintenance": true,
      "MaintenanceIntervalHours": 24,
      "DataRetentionDays": 90,
      "SoftDeleteRetentionDays": 30,
      "EnableVacuum": true,
      "EnableAnalyze": true
    },
    
    "Performance": {
      "Enabled": true,
      "StatsRetentionDays": 7,
      "SlowQueryThresholdMs": 1000,
      "EnableDetailedLogging": false
    },
    
    "Backup": {
      "EnableAutoBackup": true,
      "BackupIntervalHours": 168,
      "BackupRetentionCount": 4,
      "BackupDirectory": "backups",
      "EnableCompression": true
    }
  },
  
  "ClientUrl": "https://localhost:7000",
  
  "Jwt": {
    "Key": "your-256-bit-secret-key-here-change-in-production-enhanced-version",
    "Issuer": "BlazorWebGame.Enhanced",
    "Audience": "BlazorWebGameClient",
    "ExpireMinutes": 60
  },
  
  "GameSettings": {
    "BattleTickIntervalMs": 100,
    "MaxBattlesPerPlayer": 1,
    "BattleRefreshDelaySeconds": 3,
    "EnableEnhancedFeatures": true,
    "UseUnifiedDataStorage": true
  },
  
  "HealthChecks": {
    "UI": {
      "Enabled": true,
      "Path": "/health-ui"
    },
    "Publisher": {
      "Enabled": false
    }
  }
}