{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "BlazorWebGame.Server.Middleware": "Information",
      "BlazorWebGame.Server.Security": "Information",
      "BlazorWebGame.Server.Controllers": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=gamedata.db;Cache=Shared;Journal Mode=WAL"
  },
  "GameServer": {
    "GameLoopIntervalMs": 500,
    "MaxConcurrentBattles": 1000,
    "BattleTimeoutSeconds": 1800,
    "EnableDevelopmentTests": true,
    "EnablePerformanceMonitoring": true,
    "DataStorageType": "Optimized",
    "AutoSaveIntervalSeconds": 300
  },
  "DataStorage": {
    "StorageType": "Optimized",
    "AutoSaveIntervalSeconds": 300,
    "DatabaseCleanupIntervalHours": 24,
    "DataRetentionDays": 30,
    "EnableBatchWrites": true,
    "BatchWriteIntervalSeconds": 5,
    "BatchWriteMaxItems": 100
  },
  "DatabaseOptimization": {
    "EnableWALMode": true,
    "CacheSizeKB": 10240,
    "EnableMemoryMapping": true,
    "MemoryMapSizeMB": 256,
    "ConnectionTimeoutSeconds": 30,
    "EnableDetailedErrors": false,
    "EnableSensitiveDataLogging": false
  },
  "Monitoring": {
    "EnablePerformanceLogging": true,
    "SlowRequestThresholdMs": 1000,
    "EnableSecurityAuditLog": true,
    "LogRequestBodies": false,
    "EnableHealthChecks": true,
    "EnableMetrics": true
  },
  "Jwt": {
    "Key": "BlazorWebGame-SuperSecret-256bit-Key-ChangeInProduction-abcdef123456789012345678901234567890",
    "Issuer": "BlazorWebGame.Server",
    "Audience": "BlazorWebGame.Client",
    "ExpireMinutes": 60
  },
  "Security": {
    "RateLimit": {
      "IpRateLimit": {
        "MaxRequests": 100,
        "TimeWindowMinutes": 1
      },
      "UserRateLimit": {
        "MaxRequests": 200,
        "TimeWindowMinutes": 1
      },
      "BattleEndpoints": {
        "MaxRequests": 30,
        "TimeWindowMinutes": 1
      }
    },
    "Cors": {
      "AllowedOrigins": [
        "https://localhost:7051",
        "http://localhost:5190",
        "http://localhost:3000"
      ],
      "AllowCredentials": true
    }
  },
  "GameSettings": {
    "BattleTickIntervalMs": 100,
    "MaxBattlesPerPlayer": 1,
    "BattleRefreshDelaySeconds": 3,
    "MaxConcurrentBattles": 100
  }
}
